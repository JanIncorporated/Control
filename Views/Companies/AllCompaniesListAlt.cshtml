@model AllCompaniesViewModel

    <a class="shadow-lg nav-link" style="margin-left: 90%; margin-top: 50px; position: absolute; background: transparent; border: 0; height: 16px; width: 16px" asp-controller="Home" asp-action="Index">
        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-grid-3x3-gap-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg" style="color: black">
            <path d="M1 2a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2zm5 0a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V2zm5 0a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1V2zM1 7a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V7zm5 0a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V7zm5 0a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1V7zM1 12a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1v-2zm5 0a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1v-2zm5 0a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1v-2z" />
        </svg>
    </a>

<h1 class="text-center" style="margin-top: 100px; font-style: italic;">There are companies we were working with in past</h1>

<div class="container shadow-lg p-3 mb-5 bg-white rounded" style="margin-top: 100px;">
    <div class="row">
        <a class="shadow-lg mb-3" width="75px" height="14px" style="margin-left: 90%; padding: 3px; border: solid; border-color: black; border-width: 1px; border-radius: 5px; color: black; font-size: 14px" asp-controller="Home" asp-action="IndexAlt">
            Hide inactive
        </a>
        @{
            foreach (var company in Model.allCompanies)
            {
                <div class="col-md-12">
                    <div class="card mb-5 shadow-sm" style="height: 750px; background-color: RGB(238,238,238)">
                        <div class="row m-2">
                            <div class="col" style="height: 225px; width: 300px; background-color: white;">
                                <img class="ibd-placeholder-img rounded mx-auto d-block" width="100%" height="100%" style="vertical-align: middle; object-fit: contain;" src="@company.Logo" alt="">
                            </div>
                            <div class="col">
                                <h3 class="mt-3 text-center"> @company.Name </h3>
                                <p class="mt-3"> <strong>Link:</strong> <a href="@company.Link.ToString()">@company.Link.ToString()</a></p>
                                <p class="mt-3">
                                    <strong>Country:</strong> @company.Country
                                </p>
                                @if (@company.Status == false)
                                {
                                <p style="color: palevioletred"><strong>Status:</strong> Inactive</p>           
                                }
                            </div>
                        </div>
                        <div class="row m-2">
                            <p class="mt-3 ml-2 mr-2" style=" text-align: justify ;">@company.FullInfo</p>
                        </div>
                    </div>
                </div>

            }

        }
    </div>

</div>


