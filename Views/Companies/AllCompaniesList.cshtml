@model AllCompaniesViewModel

<a class="shadow-lg nav-link" style="margin-left: 90%; margin-top: 50px; position: absolute; background: transparent; border: 0; height: 16px; width: 16px" asp-controller="Companies" asp-action="AllCompaniesListAlt">
    <svg id="posButton" width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-square-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg" style="color: black">
        <path d="M0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2z" />
    </svg>
</a>

<h1 class="text-center" style="margin-top: 100px; font-style: italic;">There are companies we were working with in past</h1>

<div class="container shadow-lg p-3 mb-5 bg-white rounded" style="margin-top: 100px;">
    <div class="row">
        <a class="shadow-lg mb-3" width="75px" height="14px" style="margin-left: 90%; padding: 3px; border: solid; border-color: black; border-width: 1px; border-radius: 5px; color: black; font-size: 14px" asp-controller="Home" asp-action="Index">
            Hide inactive
        </a>
        @{
            foreach (var company in Model.allCompanies)
            {
                <div class="col-md-4">
                            <div class="card mb-4 shadow-sm" style="height: 500px; background-color: RGB(238,238,238)">
                                <div class="" style="height: 225px; background-color: white">
                                    <img class="ibd-placeholder-img rounded mx-auto d-block" width="100%" height="100%" style="vertical-align: middle; object-fit: contain;" src="@company.Logo" alt="">
                                </div>
                                <h3 class="mt-3 text-center"> @company.Name </h3>
                                <p class="m-3"> <strong>Link:</strong> <a href="@company.Link.ToString()">@company.Link.ToString()</a></p>
                                <p class="m-3">
                                    <strong>Country:</strong> @company.Country
                                </p>
                                @if (@company.Status == false)
                                {
                                    <p class="m-3" style="color: palevioletred"><strong>Status:</strong> Inactive</p>
                                }
                            </div>
                </div>

            }

        }
    </div>

</div>


