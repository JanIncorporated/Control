@model LogInViewModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div style="margin-top: 200px; margin-left: 30%; margin-right: 30%">
    <h3 class="text-center" style="margin-top: 100px; font-style: italic;">
        Enter your company Login and Password
    </h3>

    <form class="form-signin" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
        <div class="form-label-group mt-5">
            <input type="text" asp-for="Login" id="inputEmail" class="form-control" placeholder="Email address">
            <span asp-validation-for="Login" />
        </div>

        <div class="form-label-group">
            <input asp-for="Password" class="form-control" placeholder="Password">
            <span asp-validation-for="Password" />
        </div>

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" value="remember-me"> Remember me
            </label>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        <p class="mt-5 mb-3 text-muted text-center">© 2020</p>
    </form>
</div>
